// create the grid
var accountGrid = Ext.create('Ext.grid.Panel', {
	width : 1000,
	bufferedRenderer : false,
	store : accountStore,
	columns : [ {
		text : "Code",
		dataIndex : 'accountId',
		sortable : true,
	}, {
		text : "Name",
		dataIndex : 'name'
	} ],
	forcefit : true,
	split : true,
});

