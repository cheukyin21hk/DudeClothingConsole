var orderForm = Ext.create('Ext.form.Panel', {
	region : "center",
	bodyPadding : 10,
	defaultType : 'textfield',
	items : [ {
		 xtype: 'numberfield',
		fieldLabel : 'Price',
		name : 'price'
	}, {
		xtype: 'datefield',
		fieldLabel : "Deposite Date",
		name : 'depositeDate'
	}, accountDropdown, {
		fieldLabel : "Stock ID",
		name : "stockId"
	}, {
		xtype: 'datefield',
		fieldLabel : "deposit",
		name : "deposit"
	}, statusDropdown, {
		fieldLabel : "client Code",
		name : "client"
	}, {
		fieldLabel : "purchaseId",
