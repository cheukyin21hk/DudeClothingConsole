// start creating the form for each basic info
var accountForm = Ext.create('Ext.form.Panel', {
	region : "center",
	bodyPadding : 10,
	defaultType : 'textfield',
	items : [ {
		fieldLabel : 'Account Name',
		name : 'name',
		nullable : false
	}, {
		xtype : 'button',
		text : 'Add new account',
		margin : 10,
		handler : function() {
			var form = this.up('form').getForm();
			var name = form.findField('name').getSubmitValue();
			Ext.Ajax.request({
				url : '/admin/account/add',
				method : 'GET',
				params : {
					name : name
				},
				success : function() {
					console.log('success');
				},
				failure : function() {
					console.log('failure');
				}
			});
		}
	}, {
		xtype : 'button',
		text : 'Reset',
		margin : 10,
		handler : function() {
			var form = this.up('form').getForm();
			form.reset();
		}
	} ]
});

