var clientForm = Ext.create('Ext.form.Panel', {
	region : "center",
	bodyPadding : 10,
	defaultType : 'textfield',
	items : [ {
		fieldLabel : 'Client Name',
		name : 'name'
	}, {
		fieldLabel : 'Client Phone Number',
		name : 'phoneNumber'
	}, {
		xtype : 'button',
		text : 'Add new client',
		margin : 10,
		handler : function() {
			var form = this.up('form').getForm();
			var name = form.findField('name').getSubmitValue();
			var phoneNumber = form.findField('phoneNumber').getSubmitValue();
			Ext.Ajax.request({
				url : '/admin/client/add',
				method : 'GET',
				params : {
					name : name,
					phoneNumber : phoneNumber
				},
				success : function() {
					console.log('success');
				},
				failure : function() {
					alert('error');
					console.log('failure');
				}
			});
		}
	}, {
		xtype : 'button',
		text : 'Reset',
		margin : 10,
		handler : function() {
			var form = this.up('form').getForm();
			form.reset();
		}
	} ]
});

