// start creating the form for each basic info
Ext.define('com.dudeClothing.AccountForm', {
	extend : 'Ext.form.Panel',
	xtype : 'dudeAccountForm',
	bodyPadding : 10,
	defaultType : 'textfield',
	items : [
			{
				id : 'accountFormStatus',
				xtype : 'displayfield',
			},
			{
				xtype : 'textfield',
				fieldLabel : 'Account Name',
				name : 'name',
				nullable : false
			},
			{
				xtype : 'button',
				text : 'Add new account',
				margin : 10,
				handler : function() {
					var form = this.up('form').getForm();
					var name = form.findField('name').getSubmitValue();
					if (form.isValid()) {
						Ext.Ajax.request({
							url : '/admin/account/add',
							method : 'GET',
							params : {
								name : name
							},
							success : function() {
								Ext.getCmp('accountFormStatus').setValue(
										"The account \"" + name + "\" is add");
								accountStore.load();
							},
							failure : function() {
								console.log('failure');
							}
						});
					}
				}
			}, {
				xtype : 'button',
				text : 'Reset',
				margin : 10,
				handler : function() {
					var form = this.up('form').getForm();
					form.reset();
				}
			} ]
});

