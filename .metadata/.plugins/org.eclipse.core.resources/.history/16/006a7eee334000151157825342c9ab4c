Ext.define('com.dudeClothing.SaleItemForm', {
	extend : 'Ext.form.Panel',
	xtype : 'dudeSaleItemForm',
	bodyPadding : 10,
	defaultType : 'textfield',
	items : [
			{
				id : 'orderFormStatus',
				xtype : 'displayfield',
			},
			{
				xtype : 'textfield',
				fieldLabel : 'size',
				name : 'size'
			},
			{
				xtype : 'numberfield',
				fieldLabel : "quantity",
				name : "quantity"
			},
			{
				xtype : 'numberfield',
				fieldLabel : "price",
				name : "price"
			},
			{
				xtype : 'combo',
				fieldLabel : 'Choose a Brand',
				store : brandStore,
				queryMode : 'remote',
				displayField : 'name',
				valueField : 'id',
				name : 'brandId'

			},
			{

				xtype : 'combo',
				fieldLabel : 'Delivered',
				name : 'delivered',
				queryMode : 'local',
				store : Ext.create('Ext.data.Store', {
					fields : [ 'value', 'display' ],
					data : [ {
						"display" : "Yes",
						"value" : 'Y'
					}, {
						"display" : "No",
						"value" : 'N'
					} ]
				}),
				displayField : 'display',
				valueField : 'value',
				autoSelect : true,
				forceSelection : true
			},
			{
				xtype : 'textfield',
				fieldLabel : "Item name",
				name : "item"
			},
			{
				xtype : 'button',
				text : 'Add New Order',
				margin : 10,
				handler : function() {
					var form = this.up('form').getForm();
					var stockId = form.findField('stockId').getSubmitValue();
					if (form.isValid()) {
						Ext.Ajax.request({
							url : '/admin/transaction/addOrder',
							method : 'GET',
							params : {
								price : form.findField('price')
										.getSubmitValue(),
								depositeDate : form.findField('depositeDate')
										.getSubmitValue(),
								stockId : stockId,
								deposit : form.findField('deposit')
										.getSubmitValue(),
								clientId : form.findField('clientId')
										.getSubmitValue(),
								statusId : form.findField('statusId')
										.getSubmitValue(),
								accountId : form.findField('accountId')
										.getSubmitValue()
							},
							success : function() {
								console.log('success');
								Ext.getCmp('orderFormStatus').setValue(
										"The order with stock \"" + stockId
												+ "\" is add");
								orderStore.load();
								stockStore.load();
							},
							failure : function() {
								console.log('failure');
							}
						});
					}
				}
			}, {
				xtype : 'button',
				text : 'Reset',
				margin : 10,
				handler : function() {
					var form = this.up('form').getForm();
					form.reset();
				}
			} ]
});

Ext.define('com.dudeClothing.PurchaseOrderForm', {
	extend : 'Ext.form.Panel',
	xtype : 'dudePurchaseOrderForm',
	bodyPadding : 10,
	defaultType : 'textfield',
	items : [
			{
				id : 'purchaseFormStatus',
				xtype : 'displayfield',
			},
			{
				xtype : 'numberfield',
				fieldLabel : 'quantity',
				name : 'quantity'
			},
			{
				xtype : 'dudeCurrencyDropdown'
			},
			{
				xtype : 'numberfield',
				fieldLabel : "Price in Currency",
				name : "currencyPrice"
			},
			{
				xtype : 'numberfield',
				fieldLabel : "foreignShipCost",
				name : "foreignShipCost"
			},
			{
				xtype : 'numberfield',
				fieldLabel : "localShipCost",
				name : "localShipCost"
			},
			{
				xtype : 'textfield',
				fieldLabel : "logisticCode",
				name : "logisticCode",
				nullable : false
			},
			{
				xtype : 'textfield',
				fieldLabel : "trackingNo",
				name : "trackingNo",
				nullable : false
			},
			{
				xtype : 'textfield',
				fieldLabel : "invoice",
				name : "invoice"
			},
			{
				xtype : 'dudeBrandDropdown'
			},
			{
				xtype : 'textfield',
				fieldLabel : "Size",
				name : "size",
				nullable : false
			},
			{
				xtype : 'textfield',
				fieldLabel : "Stock Name",
				name : "stockName",
				nullable : false
			},
			{
				xtype : 'button',
				text : 'Add New Purchase',
				margin : 10,
				handler : function() {
					var form = this.up('form').getForm();
					var stockName = form.findField('stockName')
							.getSubmitValue();
					if (form.isValid()) {
						Ext.Ajax.request({
							url : '/admin/transaction/addPurchase',
							method : 'GET',
							params : {
								quantity : form.findField('quantity')
										.getSubmitValue(),
								currencyPrice : form.findField('currencyPrice')
										.getSubmitValue(),
								foreignShipCost : form.findField(
										'foreignShipCost').getSubmitValue(),
								localShipCost : form.findField('localShipCost')
										.getSubmitValue(),
								trackingNo : form.findField('trackingNo')
										.getSubmitValue(),
								invoice : form.findField('invoice')
										.getSubmitValue(),
								logisticCode : form.findField('logisticCode')
										.getSubmitValue(),
								stockName : stockName,
								size : form.findField('size').getSubmitValue(),
								brandId : form.findField('brandId')
										.getSubmitValue(),
								currencyId : form.findField('currencyId')
										.getSubmitValue()
							},
							success : function() {
								console.log('success');
								Ext.getCmp('purchaseFormStatus').setValue(
										"The purchase record with stock"
												+ stockName + " is add");
								purchaseStore.load();
								stockStore.load();
							},
							failure : function() {
								console.log('failure');
							}
						});
					}
				}
			}, {
				xtype : 'button',
				text : 'Reset',
				margin : 10,
				handler : function() {
					var form = this.up('form').getForm();
					form.reset();
				}
			} ]
});

